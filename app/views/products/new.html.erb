<div hclass="content">
  <h1>New product</h1>
  <table>
    <%= form_for @product do |f|-%>
      <tr>
        <td><%= f.label :name %></td>
        <td><%= f.text_field :name%></td>
      </tr>
      <tr>
        <td><%= f.label :price %></td>
        <td><%= f.text_field :price %></td>
      </tr>
      <tr>
        <td><%= f.label :description %></td>
        <td><%= f.text_area :description %></td>
      </tr>
      <tr>
        <td><%= f.submit  "Add" %></td>
        <td><%= f.button  "Reset", type: "reset" %></td>
      </tr>
    <% end %>
  </table>
</div>
